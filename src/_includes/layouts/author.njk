{% extends 'layouts/default.njk' %}
{% from "partials/card.njk" import card %}

{% set title = author.name %}

{% block content %}
    {% include "partials/author-header.njk" %}

    <section class="post-feed">
        {% if author.posts %}
            {% for post in author.posts %}
                {{ card(post) }}
            {% endfor %}
        {% else %}
            <p>No posts to be found</p>
        {% endif %}
    </section>
{% endblock %}
